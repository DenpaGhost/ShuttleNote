<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/setting_list_title">
        <SwitchPreference
                android:defaultValue="true"
                android:key="isEnableEnhancedList"
                android:summary="@string/enhance_summary"
                android:title="@string/enable_enhance"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setting_memo_title">

        <EditTextPreference
                android:defaultValue="タイトルのないメモ"
                android:key="defaultTitle"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:summary="@string/not_title_summary"
                android:title="@string/not_title"/>
        <EditTextPreference
                android:key="titleTemplate"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:summary="@string/title_tmp_summary"
                android:title="@string/tmp_title"/>
        <EditTextPreference
                android:key="memoTemplate"
                android:selectAllOnFocus="true"
                android:singleLine="false"
                android:summary="@string/memo_tmp_summary"
                android:title="@string/memo_tmp"/>

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/move_s">

        <SwitchPreference
                android:defaultValue="false"
                android:key="isEnableIntegratedBackKey"
                android:summary="@string/backKey_settings_summary"
                android:title="@string/backKey_settings_title"/>
        <SwitchPreference
                android:defaultValue="false"
                android:key="isUsingViewer"
                android:summary="@string/viewer_settings_summary"
                android:title="@string/viewer_settings_title"/>
    </PreferenceCategory>

</PreferenceScreen>